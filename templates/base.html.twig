<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Bienvenido!{% endblock %} | HCD</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('css/admin-lte') }}
    {% endblock %}
    {{ encore_entry_script_tags('admin-lte') }}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-success">

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <li class="nav-item">
                    <a href="{{ path('app_homepage') }}?_want_to_be_this_user=_exit"><i
                                class="fa fa-fw fa-sign-out"></i>
                        Desimpersonar
                    </a>
                </li>
            {% endif %}
            <li class="nav-item dropdown">
                {% set nombreusuario = app.user %}
                {% if app.user.persona %}
                    {% set nombreusuario = app.user.persona %}
                {% endif %}
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-user"></i>
                    {{ nombreusuario }}
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-item dropdown-header">

                        {{ nombreusuario }}
                    </span>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-user mr-2"></i>

                        <span class="float-right text-muted text-sm">
                            {% if is_granted('ROLE_CONCEJAL') %}
                            - Concejal
                        {% elseif is_granted('ROLE_SECRETARIO') %}
                                - Secretario
                            {% elseif is_granted('ROLE_LEGISLATIVO') %}
                                - Legislativo
                            {% else %}
                                - Agente
                            {% endif %}</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('app_logout') }}" class="dropdown-item dropdown-footer">Cerrar Sesi√≥n</a>
                </div>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-success elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('app_homepage') }}" class="brand-link navbar-success">
            <span class="logo-mini">HCD</span>
            <span class="brand-text font-weight-light">{{ ciudad_name }}</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar Menu -->
            <nav class="mt-2">

                {{ knp_menu_render('main', {'currentClass': 'active', 'ancestorClass':'active'}) }}


            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">{{ block('title') }}</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                {% block body %}{% endblock %}
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <strong>Copyright &copy; {{ "now"|date("Y") }} <a href="https://hcdposadas.gob.ar">HCD - Posadas</a>.</strong>
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> {{ version }}
        </div>
    </footer>


</div>
<!-- ./wrapper -->

<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
    // $.widget.bridge('uibutton', $.ui.button)
</script>
{{ encore_entry_script_tags('js/functions') }}
<script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
{% block javascripts %}

{% endblock %}
</body>
</html>
